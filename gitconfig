[user]
	name = Matheus E. Muller
	email = hello@memuller.com

[core]
  pager = less -FRSX
	excludesfile = ~/.gitignore
	trustctime = false
  editor = vim
  filemode = false
	autocrlf = input

[color]
  ui = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[push]
  default = matching

[merge]
  summary = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
  process = git-lfs filter-process

[alias]
  unstage = reset HEAD --
	undo = reset HEAD~1
  dc = diff --cached
  a = add
  aa = add --all
	st = status
  s = status -sb
  cl = clone
  ci = commit
  cia = commit -a
  cim = commit -m
  ciam = commit -a -m
  cii = commit --interactive
  co = checkout
  cob = checkout -b
  com = checkout master
  br = branch
  bra = branch -a
  pl = pull
  plr = pull --rebase
  plm = pull origin master
  ps = push
  psm = push origin master
  plh = pull origin HEAD
  psh = push origin HEAD
  pld = pull origin dev
  psd = push origin dev
  psa = push --all
  df = diff
  lg = log --pretty=oneline
  ll = log --stat
  lgg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
  last = log -1 --stat
  cp = cherry-pick
  sa = stash apply
  ss = stash
  sc = stash create
  su = submodule
  suu = submodule update --init
  sua = submodule add
  me = merge
  mem = merge master
  mes = merge --squash
  re = rebase
  rem = rebase master
  hero = push heroku heroku:master
  shift = push openshift openshift:master
  theirs = merge --strategy-option theirs
  ours = merge --strategy-option ours
[cola]
	spellcheck = false
